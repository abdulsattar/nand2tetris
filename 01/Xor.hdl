/**
 * Exclusive-or gate:
 * out = not (a == b)
 */

CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    //(notA and b) or (notB and A)
    Not (in=a, out=notA);
    Not (in=b, out=notB);

    And (a=notA, b=b, out=notAAndB);
    And (a=notB, b=a, out=notBAndA);

    Or (a=notAAndB, b=notBAndA, out=out);
}